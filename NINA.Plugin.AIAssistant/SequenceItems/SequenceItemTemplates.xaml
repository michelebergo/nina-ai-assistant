<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NINA.Plugin.AIAssistant.SequenceItems"
    xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
    xmlns:wpfbase="clr-namespace:NINA.WPF.Base;assembly=NINA.WPF.Base">

    <!-- AI Image Analysis Template -->
    <DataTemplate DataType="{x:Type local:AIImageAnalysisInstruction}">
        <ninactrl:SequenceBlockView>
            <ninactrl:SequenceBlockView.SequenceItemContent>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="AI Image Analysis" FontWeight="Bold" Margin="5"/>
                    <TextBlock Text="Analysis Prompt:" Margin="5,5,5,0"/>
                    <TextBox Text="{Binding AnalysisPrompt}" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"
                             MinHeight="60" 
                             Margin="5"/>
                </StackPanel>
            </ninactrl:SequenceBlockView.SequenceItemContent>
        </ninactrl:SequenceBlockView>
    </DataTemplate>

    <!-- AI Suggest Exposure Template -->
    <DataTemplate DataType="{x:Type local:AISuggestExposureInstruction}">
        <ninactrl:SequenceBlockView>
            <ninactrl:SequenceBlockView.SequenceItemContent>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="AI Exposure Suggestion" FontWeight="Bold" Margin="5"/>
                    
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Target:" Grid.Row="0" Grid.Column="0" Margin="0,5,10,5" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding TargetName}" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

                        <TextBlock Text="Filter:" Grid.Row="1" Grid.Column="0" Margin="0,5,10,5" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding FilterType}" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

                        <TextBlock Text="Sky Brightness:" Grid.Row="2" Grid.Column="0" Margin="0,5,10,5" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding CurrentSkyBrightness}" Grid.Row="2" Grid.Column="1" Margin="0,5"/>
                    </Grid>
                </StackPanel>
            </ninactrl:SequenceBlockView.SequenceItemContent>
        </ninactrl:SequenceBlockView>
    </DataTemplate>

    <!-- AI Query Template -->
    <DataTemplate DataType="{x:Type local:AIQueryInstruction}">
        <ninactrl:SequenceBlockView>
            <ninactrl:SequenceBlockView.SequenceItemContent>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="AI Query Assistant" FontWeight="Bold" Margin="5"/>
                    <TextBlock Text="Your Question:" Margin="5,5,5,0"/>
                    <TextBox Text="{Binding Question}" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"
                             MinHeight="60" 
                             Margin="5"/>
                </StackPanel>
            </ninactrl:SequenceBlockView.SequenceItemContent>
        </ninactrl:SequenceBlockView>
    </DataTemplate>

</ResourceDictionary>
